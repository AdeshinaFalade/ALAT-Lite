<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/createAcctToolbar"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="40dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorBackground"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:elevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp">
    
        <RelativeLayout
            android:id="@+id/btnDomAcct" 
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgdom"
                android:src="@drawable/dom"
                android:layout_centerVertical="true"
                android:background="@drawable/blackrect"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                />
            
            <ImageView
                android:src="@drawable/whitearrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                />
            
            <TextView
            android:text="Domiciliary Account"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/imgdom"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>
        
        
        
        </RelativeLayout>
    
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorBackground"
        android:layout_height="60dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        android:elevation="10dp"
        android:layout_marginTop="30dp">
    
        <RelativeLayout
            android:id="@+id/btnCurrentAcct" 
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgcurrent"
                android:src="@drawable/joint"
                android:layout_centerVertical="true"
                android:background="@drawable/blackrect"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                />
            
            <ImageView
                android:src="@drawable/whitearrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                />
            
            <TextView
            android:text="Current Account"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/imgcurrent"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>
        
        
        
        </RelativeLayout>
    
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/colorBackground"
        android:layout_height="60dp"
        android:elevation="10dp">
    
        <RelativeLayout
            android:id="@+id/btnJointAcct" 
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgJoint"
                android:src="@drawable/graph"
                android:layout_centerVertical="true"
                android:background="@drawable/blackrect"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                />
            
            <ImageView
                android:src="@drawable/whitearrow"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                />
            
            <TextView
            android:text="Joint Account"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@id/imgJoint"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="24dp"/>
        
        
        
        </RelativeLayout>
    
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        android:layout_width="match_parent"
        app:cardBackgroundColor="@color/colorBackground"
        android:layout_height="60dp"
        android:elevation="10dp">
    
        <RelativeLayout
            android:id="@+id/btnRoyalKiddiesAcct"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgroyal"
                android:src="@drawable/roykid"
                android:layout_centerVertical="true"
                android:background="@drawable/blackrect"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                />
            
            <ImageView
                android:src="@drawable/whitearrow"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                />

             <TextView
                android:text="Royal Kiddies Account"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imgroyal"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="24dp"/>
        
        
        
        </RelativeLayout>
    
    </androidx.cardview.widget.CardView>
        

   

</LinearLayout>
