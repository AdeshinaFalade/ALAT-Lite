<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/wardDetToolbar"
        android:layout_width="match_parent"
        android:elevation="4dp"
        android:layout_height="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ward's Details"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textSize="15sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorBackground"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:padding="15dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />
            <EditText
                android:id="@+id/edtWardFirstName"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorEdtBackground"
                android:hint="First Name"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:background="@drawable/edtbackground"
                android:layout_height="47dp"/>

        

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />

            <EditText
                android:id="@+id/edtWardlastName"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorEdtBackground"
                android:hint="Last Name"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:background="@drawable/edtbackground"
                android:layout_height="47dp"/>

             <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Middle Name"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/edtWardMiddleName"
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorEdtBackground"
            android:hint="Middle Name"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:inputType="textPersonName"
            android:textSize="15sp"
            android:background="@drawable/edtbackground"
            android:layout_height="47dp"/>

             <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />

        <Spinner
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorEdtBackground"
                android:background="@drawable/edtbackground"
                android:layout_height="47dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/spinner3" />

            <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Date of Birth"
           android:layout_marginTop="5dp"
           android:textStyle="bold"
           android:textColor="@color/colorPrimary"
           android:textSize="15sp"
            />

            <androidx.appcompat.widget.AppCompatButton
            android:text="DD/MM/YY"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:textAlignment="viewStart"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:background="@drawable/btnBackground"
            android:backgroundTint="@color/colorEdtBackground"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:id="@+id/btnStartDate" />

             <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />
            <EditText
                android:id="@+id/edtAcctNum"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorEdtBackground"
                android:hint="Email"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:background="@drawable/edtbackground"
                android:layout_height="47dp"/>

             <RelativeLayout
            android:layout_width="match_parent"
                android:layout_marginTop="5dp"
            android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_image"/>

                 <ImageView
                     android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add_image"/>
        
        </RelativeLayout>


            <com.google.android.material.button.MaterialButton
                android:text="Next"
                android:layout_gravity="right"
                android:layout_marginTop="30dp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:background="@drawable/btnBackground"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/btnTransfer" />


    
        </LinearLayout>

       
    </androidx.cardview.widget.CardView>


</LinearLayout>
