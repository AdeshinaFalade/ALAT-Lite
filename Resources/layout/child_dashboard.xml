<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:backgroundTint="@color/dashboardBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_alignParentLeft="true"
            android:id="@+id/name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:text="Hi, Shola"
            android:textStyle="bold"
            android:layout_width="200dp"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/dp"
            android:src="@drawable/dollar"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_width="70dp"
            android:layout_height="70dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="23dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/child_dashboard_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtBalance"
            android:textSize="22sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:text="Balance"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/hide"
            android:layout_toRightOf="@id/txtBalance"
            android:src="@drawable/hide"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/balance"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtBalance"
            android:text="N 25,000,000"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        

         <TextView
            android:id="@+id/txtStatus"
            android:textSize="22sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Status"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/status"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtStatus"
            android:text="Active"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

         <TextView
            android:id="@+id/txtAcctNo"
            android:textSize="22sp"
            android:layout_below="@+id/balance"
            android:layout_alignParentLeft="true" 
            android:layout_marginTop="25dp"
            android:text="Account Number"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@android:id/copy"
            android:layout_toRightOf="@id/txtAcctNo"
            android:layout_below="@id/balance"
            android:src="@drawable/copy"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <TextView
            android:id="@+id/acctNo"
            android:textSize="20sp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtAcctNo"
            android:text="0011223344"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

         <TextView
            android:id="@+id/txtType"
            android:textSize="22sp"
            android:layout_below="@+id/status"
            android:layout_alignParentRight="true" 
            android:layout_marginTop="25dp"
            android:text="Type"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/type"
            android:textSize="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/txtType"
            android:text="Tier 3"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.card.MaterialCardView 
            android:id="@+id/airtimePurchase"
            android:elevation="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_width="150dp"
            android:layout_height="195dp">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/child_dashboard_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:src="@drawable/airtime_purchase"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="Airtme Purchase"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView 
            android:id="@+id/accountStatement"
            android:elevation="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:layout_width="150dp"
            android:layout_height="195dp">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/child_dashboard_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:src="@drawable/account_statement"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:text="Account Statement"
                    android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

   <com.google.android.material.card.MaterialCardView
        android:id="@+id/transactionHistory"
            android:elevation="4dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="195dp">
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/child_dashboard_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_gravity="center"
                android:src="@drawable/transaction_history"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:textColor="@color/white"
                android:text="Transaction History"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/homeButton"
        android:src="@drawable/home_button"
        android:layout_marginTop="20dp"
        android:baselineAlignBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
