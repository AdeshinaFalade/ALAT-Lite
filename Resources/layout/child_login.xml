<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:backgroundTint="@color/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:src="@drawable/alat_logo"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:text="Welcome Back!"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:textColor="@color/welcomeBack"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:src="@drawable/login_bg"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="0dp"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:id="@+id/imageView1" />

    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/child_login_bg"
        android:layout_marginTop="0dp"
        android:paddingBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="500dp">

         <TextView
            android:textSize="30sp"
            android:layout_marginTop="20dp"
           android:gravity="center_horizontal"
            android:textColor="@android:color/black"
            android:text="Sign In"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:text="Email"
            android:textColor="@color/emailColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtEmail"
            android:inputType="textEmailAddress"
            android:hint="Type your email"
            android:drawableLeft="@drawable/email_img"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/emailErr"
            android:layout_marginLeft="40dp"
            android:textSize="10sp"
            android:textColor="@color/red"
            android:visibility="gone"
            android:text="Email field cannot be empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/emailColor"
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtPwd"
            android:inputType="textPassword"
            android:hint="Type your password"
            android:drawableLeft="@drawable/password_img_left"
            android:drawableRight="@drawable/password_img_right"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

         <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/pwdErr"
            android:visibility="gone"
            android:layout_marginLeft="40dp"
            android:textSize="10sp"
            android:textColor="@color/red"
            android:text="Password field cannot be empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/forgotPassword"
            android:textSize="15sp"
            android:layout_marginLeft="240dp"
            android:text="Forgot Password?"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignIn"
            android:layout_width="180dp"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:textSize="19sp"
            android:text="Sign In"
            android:background="@drawable/btnBackground"
            android:backgroundTint="@color/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:layout_height="45dp"/>
    </LinearLayout>

</LinearLayout>
