<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
        
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:background="@color/colorBackground"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ward's Details"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center_horizontal"
        android:textSize="15sp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/colorBackground"
        android:layout_height="wrap_content">

        <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        android:padding="15dp"
            android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />
            <EditText
                android:id="@+id/edtWardFirstName"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorEdtBackground"
                android:hint="First Name"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:maxLength="20"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:background="@drawable/edtbackground"
                android:layout_height="47dp"/>

        

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />

            <EditText
                android:id="@+id/edtWardlastName"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorEdtBackground"
                android:hint="Last Name"
                android:layout_marginTop="10dp"
                android:maxLength="20"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:inputType="textPersonName"
                android:textSize="15sp"
                android:background="@drawable/edtbackground"
                android:layout_height="47dp"/>

                <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/controls_checked"
                android:background="@drawable/edtbackground"
            android:layout_width="wrap_content"
                    android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
            android:text="Same as guardian's"
             
            />

             <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Middle Name"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />

        <EditText
            android:id="@+id/edtWardMiddleName"
            android:layout_width="match_parent"
            android:backgroundTint="@color/colorEdtBackground"
            android:hint="Middle Name"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:maxLength="20"
            android:inputType="textPersonName"
            android:textSize="15sp"
            android:background="@drawable/edtbackground"
            android:layout_height="47dp"/>

             <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />

        <Spinner
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorEdtBackground"
                android:background="@drawable/edtbackground"
                android:layout_height="47dp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/spinner3" />

            <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Date of Birth"
           android:layout_marginTop="5dp"
           android:textStyle="bold"
           android:textColor="@color/colorPrimary"
           android:textSize="15sp"
            />

            <androidx.appcompat.widget.AppCompatButton
            android:hint="DD/MM/YY"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"
            android:textAlignment="viewStart"
            android:paddingLeft="10dp"
            android:textSize="15sp"
            android:background="@drawable/btnBackground"
            android:backgroundTint="@color/colorEdtBackground"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:id="@+id/btnDOB" />

                 <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone Number"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />
            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorEdtBackground"
                android:hint="Phone"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:inputType="number"
                android:maxLength="11"
                android:textSize="15sp"
                android:background="@drawable/edtbackground"
                android:layout_height="47dp"/>

             <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            />
            <EditText
                android:id="@+id/edtWardEmail"
                android:layout_width="match_parent"
                android:backgroundTint="@color/colorEdtBackground"
                android:hint="Email"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:paddingLeft="10dp"
                android:maxLength="30"
                android:inputType="textEmailAddress"
                android:textSize="15sp"
                android:background="@drawable/edtbackground"
                android:layout_height="47dp"/>

           


            <com.google.android.material.button.MaterialButton
                android:text="Next"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:background="@drawable/btnBackground"
                android:backgroundTint="@color/colorPrimary"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:id="@+id/btnNext" />


    
        </LinearLayout>

         </ScrollView>

       
    </androidx.cardview.widget.CardView>


</LinearLayout>
   
