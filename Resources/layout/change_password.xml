<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/back_arrow"
        android:src="@drawable/back_arrow"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="32dp"
        android:gravity="left"
        android:layout_width="40dp"
        android:layout_height="20dp"/>

    <TextView
        android:textSize="26sp"
        android:textColor="@color/welcomeBack"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="30dp"
        android:text="Change Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textSize="16sp"
        android:textColor="@color/emailColor"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="28dp"
        android:text="Please enter your default password."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    - <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/emailColor"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="39dp"
        android:text="Default Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     <androidx.appcompat.widget.AppCompatEditText
        android:layout_marginTop="3dp"
            android:inputType="textPassword"
            android:hint="Enter your default password"
        android:textSize="17sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/emailColor"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="39dp"
        android:text="New Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     <androidx.appcompat.widget.AppCompatEditText
        android:layout_marginTop="3dp"
            android:inputType="textPassword"
            android:hint="Enter your new password"
        android:textSize="17sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TextView
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/emailColor"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="39dp"
        android:text="New Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

     <androidx.appcompat.widget.AppCompatEditText
        android:layout_marginTop="3dp"
            android:inputType="textPassword"
            android:hint="Repeat your new password"
        android:textSize="17sp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/changePwd"
        android:layout_marginTop="37dp"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorPrimary"
        android:text="Change Password"
        android:textColor="@color/background"
       android:layout_gravity="center_horizontal"
        android:layout_width="179dp"
        android:layout_height="43dp"/>

</LinearLayout>
